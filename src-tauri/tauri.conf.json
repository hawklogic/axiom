{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Axiom",
  "version": "0.2.0",
  "identifier": "com.hawklogic.axiom",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Axiom",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "12.0"
    },
    "copyright": "Copyright 2024 HawkLogic Systems",
    "category": "DeveloperTool",
    "shortDescription": "Avionics-grade IDE for embedded systems",
    "longDescription": "Axiom is a deterministic, inspectable, offline IDE for embedded systems engineers. No AI. No cloud. No telemetry."
  }
}
